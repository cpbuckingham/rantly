<%= form_for @user, url: users_path, html: {class: "users-form"} do |f| %>
  <% f.object.errors.full_messages.each do |error| %>
    <div class="errors">
      <%= error %>
    </div>
  <% end %>
  <div>
    <%= f.label :username %>
    <%= f.text_field :username %>
  </div>
  <br>
  <div>
    <%= f.label :password %>
    <%= f.text_field :password %>
  </div>
  <br>
  <div>
    <%= f.label :first_name %>
    <%= f.text_field :first_name %>
  </div>
  <br>
  <div>
    <%= f.label :last_name %>
    <%= f.text_field :last_name %>
  </div>
  <br>
  <div>
    <%= f.label :bio %>
    <%= f.text_area :bio, :size => "30x10" %>
  </div>
  <br>
  <%= "How often do you rants?" %>
  <div>
    <br>
    <%= f.label :daily %>
    <%= f.radio_button  :rant_frequency, :daily %>
    <%= f.label :weekly %>
    <%= f.radio_button  :rant_frequency, :weekly %>
    <%= f.label :monthly %>
    <%= f.radio_button  :rant_frequency, :monthly %>
  </div>
  <br>
  <div>
    <br>
    <%= f.submit "Register", class: "button" %>
  </div>
<% end %>