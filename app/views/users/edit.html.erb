<%= form_for @user, url: registration_path, method: :patch, html: {class: "users-form"} do |f| %>
  <% f.object.errors.full_messages.each do |error| %>
    <div class="errors">
      <%= error %>
    </div>
  <% end %>
  <div>
    <%= f.label :username %>
    <%= f.text_field :username, value: @user.username %>
  </div>
  <br>
  <div>
    <%= f.label :password %>
    <%= f.text_field :password, value: @user.password %>
  </div>
  <br>
  <div>
    <%= f.label :first_name %>
    <%= f.text_field :first_name, value: @user.first_name %>
  </div>
  <br>
  <div>
    <%= f.label :last_name %>
    <%= f.text_field :last_name, value: @user.last_name %>
  </div>
  <br>
  <div>
    <%= f.label :bio %>
    <%= f.text_area :bio, :size => "30x10", value: @user.bio %>
  </div>
  <br>
  <%= "How often do you rants?" %>
  <div>
    <br>
    <%= f.label :daily %>
    <%= f.radio_button  :rant_frequency, :daily, value: @user.rant_frequency %>
    <%= f.label :weekly %>
    <%= f.radio_button  :rant_frequency, :weekly, value: @user.rant_frequency %>
    <%= f.label :monthly %>
    <%= f.radio_button  :rant_frequency, :monthly, value: @user.rant_frequency %>
  </div>
  <br>
  <div>
    <br>
    <%= f.submit "Update profile", class: "button" %>
  </div>
<% end %>