<div id="rants_headers">
<div class="errors">
  <% if @rant.errors.any? %>
    <% @rant.errors.full_messages.each do |error| %>
      <%= error %><br>
    <% end %>
  <% end %>
</div>
<div class="rants">
    <h1 style="color: green;">Create Rant</h1>
<br>
<%= form_for ([@user, @rant]), html: {class: "create_rant_form"} do |f| %>
  <div>
    <%= f.label :title %>
    <br>
    <%= f.text_field :title, autofocus: true %>
    <br>
    <%= f.label :content %>
    <br>
    <%= f.text_area :content, autofocus: true, size: '30x10' %>
  </div>
  <div>
    <br>
    <%= f.submit "create rant" %>
  </div>
<% end %>
    </div>
  </div>