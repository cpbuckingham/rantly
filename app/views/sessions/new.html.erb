<%= form_for @user, url: signin_path, :method => :post, html: { class: "signin-form" } do |f| %>
  <% f.object.errors.full_messages.each do |error| %>
    <div class="errors">
      <%= error %>
    </div>
  <% end %>
  <div class="rants">
  <div id="rants_headers">
    <h1 style="color: green;">Login</h1>
  <div>
    <%= f.label :username %>
    <%= f.text_field :username %>
  </div>
  <br>
  <div>
    <%= f.label :password %>
    <%= f.password_field :password %>
  </div>
  <br>
  <div>
    <%= f.submit "Login" %>
  </div>
<% end %>
</div>
</div>
